<div class="section row">
  <table class="striped col l10 m10 s10 offset-l1 offset-s1 offset-m1">
    <tr>
      <th>Estatus</th>
      <th>Nombre</th>
      <th>Fotografia</th>
      <th colspan="3"></th>
    </tr>

    <% @members.each do |member| %>
        <tr>
          <td>
            <% if member.status == 1 %>
            <i class="material-icons">done_all</i>
                <% end %>
            <% if member.status == 0 %>
            <i class="material-icons">lock</i>
                <% end%>
          </td>
          <td><%= member.full_name %></td>

          <td> <%= image_tag member.cover.url(:thumb)%></td>
          <td>
            <%= link_to member_path(member), :class => "waves-effect waves-light btn blue col s5 l6 m8" do %>
                <i class="material-icons left">remove_red_eye</i>Mostrar
            <% end %>
          </td>
          <td>
            <%= link_to member_path(member), method: :delete, data: {confirm: 'EstÃ¡s seguro?'}, :class => "waves-effect waves-light btn red darken-1 col s5 l6 m8" do %>
                <i class="material-icons left">delete</i>Eliminar
            <% end %>
          </td>
        </tr>
    <% end %>
  </table>
</div>


<div class="fixed-action-btn">
  <%= link_to new_member_path, class:"btn-floating btn-large waves-effect waves-light red" do %>
      <i class="material-icons left">add</i>
  <% end %>
</div>